---
// Componente Empezar.astro
const { identificador } = Astro.props;
---

<button
  class="empezar-btn bg-blue-800 text-white font-bold text-2xl px-4 py-2 rounded-xl transition-all hover:bg-blue-500 duration-100 hover:rounded m-12 place-self-center hover:cursor-pointer"
  data-identificador={identificador}
>
  Empezar
</button>

<script is:inline>
  document.querySelectorAll(".empezar-btn").forEach((btn) => {
    btn.addEventListener("click", function () {
      const identificador = this.dataset.identificador;
      const slideElement = document.querySelector(`#${identificador}`);

      slideElement?.classList.remove("animation-slide");
      void slideElement?.offsetWidth;
      slideElement?.classList.add("animation-slide");
    });
  });
</script>
