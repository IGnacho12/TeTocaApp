---
import Footer from "./Footer.astro";
---

<h1
  class="text-[#00ff40] font-bold text-2xl ml-2 underline underline-offset-2 decoration-3"
>
  Administre los jugadores
</h1>

<!-- 📋 Tabla para administrar jugadores -->
<table class="tabla">
  <thead>
    <tr class="cabecera">
      <!-- 🔘 Columna para marcar como ausente -->
      <th class="celda">A</th>

      <!-- ✅ Columna para marcar como presente -->
      <th class="celda">P</th>

      <!-- 📛 Columna del nombre del jugador -->
      <th class="celda">Nombre</th>

      <!-- 🧾 Columna del apellido del jugador -->
      <th class="celda">Apellido</th>
    </tr>
  </thead>
  <tbody id="tablaJugadores">
    <!-- 🔁 Fila de ejemplo, se repetirá dinámicamente -->
    <tr>
      <!-- ❌ Checkbox para marcar como ausente -->
      <td class="celda">
        <input type="radio" name="estado1" value="ausente" />
      </td>

      <!-- ✔️ Checkbox para marcar como presente -->
      <td class="celda">
        <input type="radio" name="estado1" value="presente" checked />
      </td>

      <!-- 🧍 Nombre del jugador -->
      <td class="celda">
        <input type="text" value="Jugador" />
      </td>

      <!-- 👤 Apellido del jugador -->
      <td class="celda">
        <input type="text" value="Apellido" />
      </td>
    </tr>

    <tr>
      <!-- ❌ Checkbox para marcar como ausente -->
      <td class="celda">
        <input type="radio" name="estado1" value="ausente" />
      </td>

      <!-- ✔️ Checkbox para marcar como presente -->
      <td class="celda">
        <input type="radio" name="estado1" value="presente" checked />
      </td>

      <!-- 🧍 Nombre del jugador -->
      <td class="celda">
        <input type="text" value="Jugador" />
      </td>

      <!-- 👤 Apellido del jugador -->
      <td class="celda">
        <input type="text" value="Apellido" />
      </td>
    </tr>
  </tbody>
</table>

<Footer />


